[Unit]
Description=Run save-energy.sh as a oneshot job
Wants=network.target
After=network.target
StartLimitBurst=3
StartLimitIntervalSec=60

[Service]
Type=oneshot
RemainAfterExit=no
TimeoutStopSec=180
ExecStart=/home/panel/app/get-device-upload.sh
TimeoutStartSec=0

[Install]
WantedBy=default.target
